{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"strictFunctionTypes": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	},
	"angularCompilerOptions": {
		"strictInjectionParameters": true,
		"fullTemplateTypeCheck": true
	},
}
